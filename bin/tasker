#!/usr/bin/env php
<?php

if (file_exists(__DIR__.'/../../../autoload.php')) {
    require __DIR__.'/../../../autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

$app = new Symfony\Component\Console\Application('Tasker', '0.0.1');

$app->add(new Tasker\Console\NewHost());
$app->add(new Tasker\Console\GetHost());
$app->add(new Tasker\Console\GetAll());
$app->add(new Tasker\Console\Rename());

$app->run();
